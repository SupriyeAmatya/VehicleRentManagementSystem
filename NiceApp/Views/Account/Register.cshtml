@using NiceApp.Models.ViewModel
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<body>
   
    <section class="bg-light d-flex justify-content-center">
        <div class="row d-flex justify-content-between py-5 px-5">
            <div class="col-md-12">
                <div class="card" style="width: 60rem;">
                    <div class="card-body">
                        <h3 class="card-title text-info">Register</h3>
                        <form asp-controller="Account" asp-action="Register" method="post" role="form">
                            <h6>Create a new account</h6>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserName" class="col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            @*   <div class="form-group">
                            <label asp-for="RoleSelected" class="col-md-2"></label>
                            <div class="col-md-10">
                            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                            <option disabled selected>--Select Role--</option>
                            </select>
                            </div>
                            </div>*@
                            <div class="form-group">
                                <div class="offset-md-2 col-md-10">
                                    <button type="submit" class="btn btn-success">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>