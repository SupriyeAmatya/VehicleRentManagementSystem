@using NiceApp.Models.ViewModel

@model ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<body>

    <section class="bg-light d-flex justify-content-center">
        <div class="row d-flex justify-content-between py-5 px-5">
            <div class="col-md-12">
                <div class="card" style="width: 60rem;">
                    <div class="card-body">
                        <h2 class="card-title text-info">Forgot your password?</h2>

                        <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-md-2"></label>
                                <div class="col-md-10">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success form-control">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>